<?xml version="1.0"?>
<clickhouse>
    <users>
        <!-- Default user for administration -->
        <default>
            <password></password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
        </default>
        
        <!-- Application user for state expiry indexer -->
        <user>
            <password>password</password>
            <networks>
                <ip>::1</ip>
                <ip>127.0.0.1</ip>
                <ip>172.16.0.0/12</ip>  <!-- Docker networks -->
                <ip>192.168.0.0/16</ip>  <!-- Local networks -->
            </networks>
            <profile>indexer_profile</profile>
            <quota>indexer_quota</quota>
            
            <!-- Database access permissions -->
            <access_management>1</access_management>
            <databases>
                <state_expiry>
                    <grants>
                        <grant>SELECT</grant>
                        <grant>INSERT</grant>
                        <grant>CREATE</grant>
                        <grant>DROP</grant>
                        <grant>ALTER</grant>
                    </grants>
                </state_expiry>
            </databases>
        </user>
    </users>
    
    <!-- Profiles for performance optimization -->
    <profiles>
        <default>
            <max_memory_usage>0</max_memory_usage>
            <use_uncompressed_cache>1</use_uncompressed_cache>
            <load_balancing>in_order</load_balancing>
            <log_queries>1</log_queries>
        </default>
        
        <!-- Optimized profile for indexer application -->
        <indexer_profile>
            <!-- Memory settings for large operations -->
            <max_memory_usage>107374182400</max_memory_usage>  <!-- 100GB -->
            <max_memory_usage_for_user>107374182400</max_memory_usage_for_user>
            <memory_profiler_step>4194304</memory_profiler_step>  <!-- 4MB -->
            
            <!-- Query optimization -->
            <max_threads>0</max_threads>  <!-- Use all CPU cores -->
            <max_execution_time>300</max_execution_time>  <!-- 5 minutes -->
            <max_query_size>1073741824</max_query_size>  <!-- 1GB -->
            
            <!-- Insert optimization for indexer -->
            <max_insert_block_size>1048576</max_insert_block_size>  <!-- 1M rows -->
            <min_insert_block_size_rows>262144</min_insert_block_size_rows>  <!-- 256K rows -->
            <min_insert_block_size_bytes>268435456</min_insert_block_size_bytes>  <!-- 256MB -->
            <max_insert_threads>8</max_insert_threads>
            
            <!-- Analytics optimization -->
            <max_bytes_before_external_group_by>0</max_bytes_before_external_group_by>
            <max_bytes_before_external_sort>0</max_bytes_before_external_sort>
            <group_by_two_level_threshold>100000</group_by_two_level_threshold>
            <group_by_two_level_threshold_bytes>50000000</group_by_two_level_threshold_bytes>
            
            <!-- Cache settings -->
            <use_uncompressed_cache>1</use_uncompressed_cache>
            <uncompressed_cache_size>8589934592</uncompressed_cache_size>  <!-- 8GB -->
            
            <!-- Connection settings -->
            <max_concurrent_queries_for_user>100</max_concurrent_queries_for_user>
            <max_network_bandwidth>0</max_network_bandwidth>  <!-- Unlimited -->
            <max_network_bytes>0</max_network_bytes>  <!-- Unlimited -->
            
            <!-- Logging for performance monitoring -->
            <log_queries>1</log_queries>
            <log_queries_min_type>QUERY_START</log_queries_min_type>
            <log_queries_cut_to_length>10000</log_queries_cut_to_length>
            
            <!-- Format settings -->
            <output_format_parallel_formatting>1</output_format_parallel_formatting>
            <input_format_parallel_parsing>1</input_format_parallel_parsing>
            
            <!-- Performance optimizations -->
            <optimize_move_to_prewhere>1</optimize_move_to_prewhere>
            <optimize_read_in_order>1</optimize_read_in_order>
            <optimize_aggregation_in_order>1</optimize_aggregation_in_order>
            <allow_experimental_analyzer>1</allow_experimental_analyzer>
        </indexer_profile>
    </profiles>
    
    <!-- Quotas for resource management -->
    <quotas>
        <default>
            <interval>
                <duration>3600</duration>
                <queries>0</queries>  <!-- Unlimited queries -->
                <errors>0</errors>  <!-- Unlimited errors -->
                <result_rows>0</result_rows>  <!-- Unlimited result rows -->
                <read_rows>0</read_rows>  <!-- Unlimited read rows -->
                <execution_time>0</execution_time>  <!-- Unlimited execution time -->
            </interval>
        </default>
        
        <!-- Generous quota for indexer application -->
        <indexer_quota>
            <interval>
                <duration>3600</duration>  <!-- 1 hour window -->
                <queries>0</queries>  <!-- Unlimited queries -->
                <errors>1000</errors>  <!-- 1000 errors per hour -->
                <result_rows>0</result_rows>  <!-- Unlimited result rows -->
                <read_rows>0</read_rows>  <!-- Unlimited read rows -->
                <execution_time>0</execution_time>  <!-- Unlimited execution time -->
            </interval>
        </indexer_quota>
    </quotas>
</clickhouse>