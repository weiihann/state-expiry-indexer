<clickhouse>
    <users>
        <!-- Default user for administration -->
        <default>
            <password></password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
        </default>
        
        <!-- Application user for state expiry indexer -->
        <clickhouse_user>
            <password>clickhouse_password</password>
            <networks>
                <ip>::/0</ip>  <!-- Allow from any network for migration compatibility -->
            </networks>
            <profile>default</profile>
            <quota>default</quota>
            <max_memory_usage>10000000000</max_memory_usage>
            
            <!-- Full access for migrations and operations -->
            <access_management>1</access_management>
        </clickhouse_user>
    </users>
    
